# Environment variables for Deep Search Agents

# Ollama Configuration (for local AI summarization)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:latest

# Tavily API Key (optional, for enhanced web search)
TAVILY_API_KEY=your_tavily_api_key_here

# Search Engine Settings
DEFAULT_SEARCH_ENGINE=duckduckgo  # Options: duckduckgo, tavily, wikipedia
MAX_SEARCH_RESULTS=10
SEARCH_TIMEOUT=30

# Agent Settings
MAX_ITERATIONS=5
VERBOSE_MODE=true

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost

# Logging
LOG_LEVEL=INFO
